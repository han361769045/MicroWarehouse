<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.SnacksActivity">
    <com.zczczy.leo.microwarehouse.viewgroup.MyTitleBar
        android:id="@+id/my_title_bar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:minHeight="50dp"
        app:mCustomView="@layout/search"
        app:mNavButtonIcon="@drawable/title_category"
        app:mRightButtonIcon="@drawable/title_cart" />
    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/new_slider_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:pager_animation="Accordion" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/major_color"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:text="热销产品"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.marshalchen.ultimaterecyclerview.CustomUltimateRecyclerview
            android:id="@+id/ultimate_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:recyclerviewEmptyView="@layout/empty_view"
            app:recyclerviewScrollbars="vertical">

        </com.marshalchen.ultimaterecyclerview.CustomUltimateRecyclerview>



    </FrameLayout>


</LinearLayout>