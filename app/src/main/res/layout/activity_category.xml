<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_tab_color"
    android:orientation="vertical"
    tools:context=".activities.CategoryActivity">

    <!-- 搜索框 -->
    <LinearLayout

        android:id="@+id/search_Rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/classify_title_height"
        android:layout_marginBottom="@dimen/ten_dp"
        android:layout_marginLeft="@dimen/five_dp"
        android:layout_marginRight="@dimen/twenty_dp"
        android:layout_marginTop="@dimen/ten_dp"
        android:gravity="center_vertical"
        android:weightSum="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titleName_Tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five_dp"
            android:layout_marginBottom="@dimen/five_dp"
            android:drawableLeft="@drawable/ic_back_arrow"
            android:drawablePadding="@dimen/five_dp"
            android:layout_weight="0.35"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray"
            android:textSize="@dimen/category_title_text_size"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/search_Tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:background="@drawable/shape_classify_title_bg"
            android:drawableLeft="@drawable/ic_classify_search"
            android:drawablePadding="@dimen/ten_dp"
            android:gravity="center_vertical"
            android:text="@string/text_classify_search"
            android:paddingLeft="@dimen/ten_dp"
            android:paddingTop="@dimen/five_dp"
            android:paddingBottom="@dimen/five_dp"
            android:textColor="@color/classify_title_text_color"
            />
    </LinearLayout>

    <include layout="@layout/filter_condition" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <fragment
            android:id="@+id/common_fragment"
            android:name="com.zczczy.leo.microwarehouse.fragments.UnuseFragment_"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/fragment_common_category" />

    </LinearLayout>

</LinearLayout>