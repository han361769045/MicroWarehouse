<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/img_store_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/default_header" />

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@+id/img_store_pic"
            android:orientation="vertical">

            <TextView

                android:id="@+id/txt_store_name"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="描述相符"
                android:textSize="20sp" />

            <RatingBar
                android:layout_marginTop="5dp"
                android:id="@+id/ratingBar"
                style="@style/ratingbar_style"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="0" />
        </LinearLayout>
    </RelativeLayout>
    <include layout="@layout/horizontal_line" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:orientation="vertical"
        android:gravity="center_horizontal|bottom"
        >


        <EditText
            android:id="@+id/edt_activity_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/comment_bg"
            android:gravity="top"
            android:hint="添加商品评论"
            android:paddingBottom="125dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:textColorHint="#cccccc"
            android:textSize="14sp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="10dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_shadow_selector"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:textSize="18dp"
            android:drawableLeft="@drawable/youhuiquan"
            android:gravity="center_vertical"
            android:text="好评" />



        <TextView
            android:layout_marginLeft="27dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_shadow_selector"
            android:clickable="true"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/pinglun"
            android:textSize="18dp"
            android:gravity="center_vertical"
            android:text="中评" />



        <TextView
            android:id="@+id/txt_already_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/common_shadow_selector"
            android:clickable="true"
            android:textSize="18dp"
            android:drawablePadding="5dp"
            android:layout_marginLeft="27dp"
            android:drawableLeft="@drawable/shoucang"
            android:gravity="center_vertical"
            android:text="差评" />

    </LinearLayout>

    <include layout="@layout/horizontal_line" />
    <Button
        android:textSize="17dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="170dp"
        android:id="@+id/btn_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray"
        android:padding="15dp"
        android:text="提交评论"
        android:textColor="#ffffff" />
</LinearLayout>