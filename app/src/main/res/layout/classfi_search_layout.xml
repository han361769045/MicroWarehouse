<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_classify_title_bg"
    android:gravity="center_vertical|left">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/classify_title_height"
        android:background="@drawable/shape_classify_title_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/classify_search"
            android:drawablePadding="@dimen/ten_dp"
            android:gravity="center"
            android:hint="@string/text_classify_search"
            android:textSize="14sp"
            android:textColorHint="@color/classify_title_text_color"  />
    </RelativeLayout>
</LinearLayout>

