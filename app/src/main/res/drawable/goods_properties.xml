<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>

            <!-- 相当于padding -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/tab_text" />

                    <corners android:radius="1dp" />

                    <stroke android:width="2dp" android:color="@color/tab_text" android:dashGap="0dp" android:dashWidth="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/white" />

                    <corners android:radius="1dp" />

                    <stroke android:width="1dp" android:color="#999999" android:dashGap="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>