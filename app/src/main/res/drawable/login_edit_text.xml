<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <!-- 相当于padding -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" />
                    <corners android:radius="4dp" />
                    <stroke android:width="1dp" android:color="@color/main_font_color" android:dashGap="0dp" android:dashWidth="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff" />
                    <corners android:radius="4dp" />
                    <stroke android:width="1dp" android:color="@color/gray" android:dashGap="0dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>